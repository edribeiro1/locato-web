{% extends 'commons/base.twig' %}

{% block css %}
	{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{ base_url('assets/css/commons/formulario.css') }}"/>
{% endblock css %}

{% block js %}
	{{ parent() }}
	<script src="{{ base_url('assets/js/commons/formulario.js') }}"></script>
	<script src="{{ base_url('assets/js/ferramentas/locacao/main.js') }}"></script>
{% endblock js %}

{% set titulo_tela = "Locação" %}
{% set chave_id = "loc_id" %}
{% set url_form = "ferramentas/locacao" %}
{% set url_api = "locacao" %}

{% block descricao_tela %}
	<a class="ancora-link" href="{{ base_url('ferramentas/locacao/lista') }}">Lista de locações</a>/<span>{{titulo_tela}}</span>
{% endblock descricao_tela %}

{% block body %}
	{% embed 'templates/formulario.twig' %}
		{% block body_form %}

			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
				<span style="font-size: 18px;">
					<i class="fas fa-hand-holding-usd"></i>
					Locação</span>
				<hr>
			</div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Locatário</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-user-tag"></i>
						</div>
					</div>
					<select class="select2 form-control" id="loc_id_locatario" data-bind="loc_id_locatario">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Filial</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-industry"></i>
						</div>
					</div>
					<select class="select2 form-control" id="loc_id_filial" data-bind="loc_id_filial">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Veículo</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-car"></i>
						</div>
					</div>
					<select class="select2 form-control" id="loc_id_veiculo" data-bind="loc_id_veiculo">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Data de agendamento da locação</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-calendar-alt"></i>
						</div>
					</div>
					<input class="datetimepicker form-control" id="loc_data_locacao_agendada" data-bind="loc_data_locacao_agendada"/>
				</div>
			</div>

			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Data da locação</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-calendar-alt"></i>
						</div>
					</div>
					<input class="datetimepicker form-control" id="loc_data_locacao" data-bind="loc_data_locacao"/>
				</div>
			</div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Data prevista para devolução</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-calendar-alt"></i>
						</div>
					</div>
					<input class="datetimepicker form-control" id="loc_data_devolucao_prevista" data-bind="loc_data_devolucao_prevista"/>
				</div>
			</div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Data da devolução</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-calendar-alt"></i>
						</div>
					</div>
					<input class="datetimepicker form-control" id="loc_data_devolucao" data-bind="loc_data_devolucao"/>
				</div>
			</div>

			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Limite de kilometragem</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-edit"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="loc_limite_kilometragem" data-bind="loc_limite_kilometragem">
				</div>
			</div>

		{% endblock body_form %}
	{% endembed %}
{% endblock body %}
