{% extends 'commons/base.twig' %}

{% block css %}
    {{ parent() }}
    <link href="{{ base_url('assets/libs/select2/css/select2.min.css') }}" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="{{ base_url('assets/css/commons/formulario.css') }}"/>
{% endblock css %}

{% block js %}
    {{ parent() }}
    <script src="{{ base_url('assets/libs/select2/js/select2.min.js') }}"></script>
    <script src="{{ base_url('assets/libs/select2/js/pt-br.js') }}"></script>
    <script src="{{ base_url('assets/js/commons/formulario.js') }}"></script>
    <script src="{{ base_url('assets/js/cadastros/locatario/main.js') }}"></script>
{% endblock js %}

{% set titulo_tela = "Locatario" %}
{% set chave_id = "lct_id" %}
{% set url_form = "cadastros/locatario" %}
{% set url_api = "locatario" %}

{% block descricao_tela %}
    <a class="ancora-link" href="{{ base_url('cadastros/locatario') }}">Lista de locat치rios</a>/<span>Novo locat치rio</span>
{% endblock descricao_tela %}

{% block body %}
   {% embed 'templates/formulario.twig' %}
      {% block body_form %}
      
         <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <span style="font-size: 18px;"><i class="fas fas fa-car"></i> Cadastro de locat치rio</span>
            <hr>
         </div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>Nome</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-edit"></i></div>
               </div>
               <input type="text" class="form-control" id="lct_nome" data-bind="lct_nome">
            </div>
         </div>

          <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Filial</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-industry"></i>
						</div>
					</div>
					<select class="select2 form-control" id="lct_id_filial" data-bind="lct_id_filial">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>Telefone</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-id-card"></i></div>
               </div>
               <input type="text" class="form-control" id="lct_telefone" data-bind="lct_telefone"> 
            </div>
         </div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>Celular (Principal)</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
               </div>
               <input type="text" class="form-control" id="lct_celular_principal" data-bind="lct_celular_principal"> 
            </div>
         </div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>Celular (Secund치rio)</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-mobile"></i></div>
               </div>
               <input type="text" class="form-control" id="lct_celular_secundario" data-bind="lct_celular_secundario"> 
            </div>
         </div>

          <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>E-mail</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="far fa-envelope"></i></div>
               </div>
               <input type="text" class="form-control" id="lct_email" data-bind="lct_email">
            </div>
         </div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>RG</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-id-card"></i></div>
               </div>
               <input type="text" class="form-control" id="lct_cpf" data-bind="lct_cpf"> 
            </div>
         </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>CPF</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-id-card"></i></div>
               </div>
               <input type="text" class="form-control" id="lct_rg" data-bind="lct_rg"> 
            </div>
         </div>
     

      {% endblock body_form %}
   {% endembed %}
{% endblock body %}