{% extends 'commons/base.twig' %}

{% block css %}
	{{ parent() }}
	<link href="{{ base_url('assets/libs/select2/css/select2.min.css') }}" rel="stylesheet"/>
	<link rel="stylesheet" type="text/css" href="{{ base_url('assets/css/commons/formulario.css') }}"/>
{% endblock css %}

{% block js %}
	{{ parent() }}
	<script src="{{ base_url('assets/libs/select2/js/select2.min.js') }}"></script>
	<script src="{{ base_url('assets/libs/select2/js/pt-br.js') }}"></script>
	<script src="{{ base_url('assets/js/commons/formulario.js') }}"></script>
	<script src="{{ base_url('assets/js/cadastros/manutencao/main.js') }}"></script>
{% endblock js %}

{% set titulo_tela = "Manutenção" %}
{% set chave_id = "man_id" %}
{% set url_form = "cadastros/manutencao" %}
{% set url_api = "manutencao" %}

{% block descricao_tela %}
	<a class="ancora-link" href="{{ base_url('cadastros/manutencao') }}">Lista de manutenções</a>/<span>Manutenção</span>
{% endblock descricao_tela %}

{% block body %}
    {% embed 'templates/formulario.twig' %}
	    {% block body_form %}

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                <span style="font-size: 18px;">
                    <i class="fas fa-wrench"></i>
                </i>
                Cadastro de manutenção</span>
                <hr>
            </div>

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 form-group">
                <label>Descrição</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-edit"></i>
                        </div>
                    </div>
                    <input type="text" class="form-control" id="man_descricao" data-bind="man_descricao">
                </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Filial</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-industry"></i>
						</div>
					</div>
					<select class="select2 form-control" id="man_id_filial" data-bind="man_id_filial">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Veículo</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-car"></i>
						</div>
					</div>
					<select class="select2 form-control" id="man_id_veiculo" data-bind="man_id_veiculo">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
                <label>Kilometragem</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                    </div>
                    <input type="text" class="form-control" id="man_kilometragem" data-bind="man_kilometragem">
                </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
                <label>Data vencimento</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                    <input class="datetimepicker form-control" id="man_data_vencimento" data-bind="man_data_vencimento" />
                </div>
            </div>


            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 form-group">
                <label>Observação</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-id-card"></i>
                        </div>
                    </div>
                    <textarea row="2" class="form-control" id="man_observacao" data-bind="man_observacao"></textarea>
                </div>
            </div>


        {% endblock body_form %}
    {% endembed %}
{% endblock body %}
