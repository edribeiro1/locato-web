{% extends 'commons/base.twig' %}

{% block css %}
    {{ parent() }}
    <link href="{{ base_url('assets/libs/select2/css/select2.min.css') }}" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="{{ base_url('assets/css/commons/formulario.css') }}"/>
{% endblock css %}

{% block js %}
    {{ parent() }}
    <script src="{{ base_url('assets/libs/select2/js/select2.min.js') }}"></script>
    <script src="{{ base_url('assets/libs/select2/js/pt-br.js') }}"></script>
    <script src="{{ base_url('assets/js/commons/formulario.js') }}"></script>
    <script src="{{ base_url('assets/js/cadastros/rastreado/main.js') }}"></script>
{% endblock js %}

{% set titulo_tela = "Novo rastreado" %}
{% set chave_id = "ras_id" %}
{% set form_url = "cadastro/rastreado" %}

{% block descricao_tela %}
    <a class="ancora-link" href="{{ base_url('cadastro/rastreado') }}">Lista de rastreados</a>/<span>Novo rastreado</span>
{% endblock descricao_tela %}

{% block body %}
   {% embed 'templates/formulario.twig' %}
      {% block body_form %}
      
         <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <span style="font-size: 18px;"><i class="fas fas fa-car"></i> Cadastro de rastreado</span>
            <hr>
         </div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>Descrição</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-edit"></i></div>
               </div>
               <input type="text" class="form-control" id="ras_descricao" data-bind="ras_descricao">
            </div>
         </div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>Identificação</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-id-card"></i></div>
               </div>
               <input type="text" class="form-control" id="ras_identificacao" data-bind="ras_identificacao"> 
            </div>
         </div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>Tipo</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-list"></i></div>
               </div>
               <select class="select2 form-control" id="ras_tipo" data-bind="ras_tipo">
                  <option value="-1">Nenhum selecionado</option>
                  <option value="Moto">Moto</option>
                  <option value="Carro">Carro</option>
                  <option value="Caminhão">Caminhão</option>
                  <option value="Bicicleta">Bicicleta</option>
                  <option value="Pessoa">Pessoa</option>
               </select>
            </div>
         </div>

         <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
            <label>Vincular equipamento</label>
            <div class="input-group">
               <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-microchip"></i></div>
               </div>
               <select class="select2 form-control" id="equ_id" data-bind="equ_id">
                  <option value="-1">Nenhum selecionado</option>
               </select>
            </div>
         </div>
     

      {% endblock body_form %}
   {% endembed %}
{% endblock body %}