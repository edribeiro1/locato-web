{% extends 'commons/base.twig' %}

{% block css %}
	{{ parent() }}
	<link href="{{ base_url('assets/libs/select2/css/select2.min.css') }}" rel="stylesheet"/>
	<link rel="stylesheet" type="text/css" href="{{ base_url('assets/css/commons/formulario.css') }}"/>
{% endblock css %}

{% block js %}
	{{ parent() }}
	<script src="{{ base_url('assets/libs/select2/js/select2.min.js') }}"></script>
	<script src="{{ base_url('assets/libs/select2/js/pt-br.js') }}"></script>
	<script src="{{ base_url('assets/js/commons/formulario.js') }}"></script>
	<script src="{{ base_url('assets/js/cadastros/veiculo/main.js') }}"></script>
{% endblock js %}

{% set titulo_tela = "Veículo" %}
{% set chave_id = "vei_id" %}
{% set url_form = "cadastros/veiculo" %}
{% set url_api = "veiculo" %}

{% block descricao_tela %}
	<a class="ancora-link" href="{{ base_url('cadastros/veiculo/lista') }}">Lista de veículos</a>/<span>{{titulo_tela}}</span>
{% endblock descricao_tela %}

{% block body %}
	{% embed 'templates/formulario.twig' %}
		{% block body_form %}

			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
				<span style="font-size: 18px;">
					<i class="fas fas fa-car"></i>
					Cadastro de veículo</span>
				<hr>
			</div>

			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Descrição</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-edit"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_descricao" data-bind="vei_descricao">
				</div>
			</div>

			<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 form-group">
				<label>Placa</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-id-card"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_placa" data-bind="vei_placa">
				</div>
			</div>

            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 form-group">
				<label>Kilometragem</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-tachometer-alt"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_kilometragem" data-bind="vei_kilometragem">
				</div>
			</div>

             <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 form-group">
				<label>Filial</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-network-wired"></i>
						</div>
					</div>
					<select class="select2 form-control" id="vei_id_filial" data-bind="vei_id_filial">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 form-group">
				<label>Grupo</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-network-wired"></i>
						</div>
					</div>
					<select class="select2 form-control" id="vei_id_grupo" data-bind="vei_id_grupo">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 form-group">
				<label>Tipo combustível</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-gas-pump"></i>
						</div>
					</div>
					<select class="select2 form-control" id="vei_tipo_combustivel" data-bind="vei_tipo_combustivel">
                        <option value="Flex">Flex</option>
                        <option value="Etanol">Etanol</option>
                        <option value="Gasolina">Gasolina</option>
                        <option value="Diesel">Diesel</option>
                        <option value="GNV">GNV</option>
					</select>
				</div>
			</div>
             

			<div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 form-group">
				<label>Chassi</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fab fa-umbraco"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_chassi" data-bind="vei_chassi">
				</div>
			</div>

			<div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 form-group">
				<label>Renavam</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-id-card"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_renavam" data-bind="vei_renavam">
				</div>
			</div>

			<div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 form-group">
				<label>Cor</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-palette"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_cor" data-bind="vei_cor">
				</div>
			</div>

			<div class="col-xl-9 col-lg-9 col-md-6 col-sm-12 form-group">
				<label>Modelo</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-id-card"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_modelo" data-bind="vei_modelo">
				</div>
			</div>

			<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 form-group">
				<label>Ano modelo</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-id-card"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_ano_modelo" data-bind="vei_ano_modelo">
				</div>
			</div>

			<div class="col-xl-9 col-lg-9 col-md-6 col-sm-12 form-group">
				<label>Fabrincante</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-industry"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_fabricante" data-bind="vei_fabricante">
				</div>
			</div>

			<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 form-group">
				<label>Ano fabricação</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-id-card"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="vei_ano_fabricacao" data-bind="vei_ano_fabricacao">
				</div>
			</div>

		{% endblock body_form %}
	{% endembed %}
{% endblock body %}
