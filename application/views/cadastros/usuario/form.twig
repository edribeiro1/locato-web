{% extends 'commons/base.twig' %}

{% block css %}
	{{ parent() }}
	<link href="{{ base_url('assets/libs/select2/css/select2.min.css') }}" rel="stylesheet"/>
	<link rel="stylesheet" type="text/css" href="{{ base_url('assets/css/commons/formulario.css') }}"/>
{% endblock css %}

{% block js %}
	{{ parent() }}
	<script src="{{ base_url('assets/libs/select2/js/select2.min.js') }}"></script>
	<script src="{{ base_url('assets/libs/select2/js/pt-br.js') }}"></script>
	<script src="{{ base_url('assets/js/commons/formulario.js') }}"></script>
	<script src="{{ base_url('assets/js/cadastros/usuario/main.js') }}"></script>
{% endblock js %}

{% set titulo_tela = "Usuário" %}
{% set chave_id = "usu_id" %}
{% set url_form = "cadastros/usuario" %}
{% set url_api = "usuario" %}


{% block descricao_tela %}
	<a class="ancora-link" href="{{ base_url('cadastros/usuario/lista') }}">Lista de usuarios</a>/<span>Usuário</span>
{% endblock descricao_tela %}

{% block body %}
	{% embed 'templates/formulario.twig' %}
		{% block body_form %}

			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
				<span style="font-size: 18px;">
					<i class="far fa-user"></i>
					Cadastro de usuário</span>
				<hr>
			</div>

			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 form-group">
				<label>Nome</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-edit"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="usu_nome" data-bind="usu_nome">
				</div>
			</div>

			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>E-mail</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="far fa-envelope"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="usu_email" data-bind="usu_email">
				</div>
			</div>

			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Filial</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-industry"></i>
						</div>
					</div>
					<select class="select2 form-control" id="usu_id_filial" data-bind="usu_id_filial">
						<option value="-1">Nenhum selecionado</option>
					</select>
				</div>
			</div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Login</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-user"></i>
						</div>
					</div>
					<input type="text" class="form-control" id="usu_login" data-bind="usu_login">
				</div>
			</div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-group">
				<label>Senha</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="fas fa-lock"></i>
						</div>
					</div>
					<input type="password" class="form-control" id="usu_senha" data-bind="usu_senha">
				</div>
			</div>


		{% endblock body_form %}
	{% endembed %}
{% endblock body %}
